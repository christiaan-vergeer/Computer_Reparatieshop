@model Computer_Reparatieshop.Models.Reparateur

@{
    ViewBag.Title = "Details";
}

<h2>Details voor</h2>

<div>
    <h4>@Html.DisplayFor(model => model.FullName)</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Naam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            Loon per uur
        </dt>

        <dd>
            €@Html.DisplayFor(model => model.Wage)
        </dd>

        

        <dt>
            Opdrachten
        </dt>

        @foreach (var item in Model.Reparatieopdrachts)
        {
            <dd>
                @Html.ActionLink(item.Name, "Details", "ReparatieOpdrachten", new { id = item.Id }, null)
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Pas aan", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Terug naar lijst", "Index")
</p>
