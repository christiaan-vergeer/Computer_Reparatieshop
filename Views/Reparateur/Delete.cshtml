@model Computer_Reparatieshop.Models.Reparateur

@{
    ViewBag.Title = "Delete";
}

<h2>Verwijderen</h2>

<h3>Weet je zeker dat je @Html.DisplayFor(model => model.FullName) wilt verwijderen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (Model.Reparatieopdrachts.Count() == 0)
        {
            <div class="form-actions no-color">
                <input type="submit" value="Verwijder" class="btn btn-default" /> |
                @Html.ActionLink("Terug naar lijst", "Index")
            </div>
        }
        else
        {
            <div class="form-actions no-color">
                Het is niet mogelijk reperateurs te verwijderen die nog een opdracht hebben.|<br />
                @Html.ActionLink("Terug naar lijst", "Index")
            </div>
        }

    }
</div>
