@model Computer_Reparatieshop.ViewModels.OnderdelenReparatieViewModel

@{
    ViewBag.Title = "Onderdelen";
}

<h2>Onderdelen</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-horizontal">
    <h4>Reparatieopdracht</h4>
    <hr />
    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
    
    @Html.HiddenFor(model => model.Reparatieopdracht.Id)
    @Html.HiddenFor(model => model.Reparatieopdracht.Klant)
    @Html.HiddenFor(model => model.Reparatieopdracht.Name)
    @Html.HiddenFor(model => model.Reparatieopdracht.Reparateur)
    @Html.HiddenFor(model => model.Reparatieopdracht.Startdate)
    @Html.HiddenFor(model => model.Reparatieopdracht.Status)
    @Html.HiddenFor(model => model.Reparatieopdracht.Enddate)
    @Html.HiddenFor(model => model.Reparatieopdracht.Details)
    @Html.HiddenFor(model => model.Reparatieopdracht.ComputerParts)
    @Html.HiddenFor(model => model.Reparatieopdracht.price)



    <table class="table">


        @for (int i = 0; i < Model.checker.Count(); i++)
        {

            @Html.HiddenFor(model => model.MemmoryID[i])
            @Html.HiddenFor(Model => Model.Partname[i])

            <tr>
                <td> @Html.DisplayFor(model => model.Partname[i])</td>
                @*<td> <input type="checkbox" value="@Html.DisplayFor(modelItem => item.Key.Id)" /></td>*@
                <td>
                    @Html.CheckBoxFor(Model => Model.checker[i], new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.checker[i], "", new { @class = "text-danger" })
                </td>



            </tr>

        }


    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />

        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
