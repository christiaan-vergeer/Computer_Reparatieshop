@model Computer_Reparatieshop.ViewModels.OnderdelenReparatieViewModel

@{
    ViewBag.Title = "Onderdelen";
}

<h2>Onderdelen</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <h4>Reparatieopdracht</h4>
        <hr />
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        @Html.HiddenFor(model => model.Reparatieopdracht.Id)
        @Html.HiddenFor(model => model.Reparatieopdracht.Klant)
        @Html.HiddenFor(model => model.Reparatieopdracht.Name)
        @Html.HiddenFor(model => model.Reparatieopdracht.Reparateur)
        @Html.HiddenFor(model => model.Reparatieopdracht.Startdate)
        @Html.HiddenFor(model => model.Reparatieopdracht.Status)
        @Html.HiddenFor(model => model.Reparatieopdracht.Enddate)
        @Html.HiddenFor(model => model.Reparatieopdracht.Details)
        @Html.HiddenFor(model => model.Reparatieopdracht.ComputerParts)
        @Html.HiddenFor(model => model.checkbox)


    <table class="table">
        @foreach (var item in Model.checkbox)
        {
            @Html.HiddenFor(model => item.ComputerPart.Id)
            @Html.HiddenFor(model => item.ComputerPart.Name)
            @Html.HiddenFor(model => item.ComputerPart.Price)
            @Html.HiddenFor(model => item.ComputerPart.Amount)
            @Html.HiddenFor(model => item.ComputerPart.Vendor)
            @Html.HiddenFor(model => item.ComputerPart)



        <tr>
            <td> @Html.DisplayFor(modelItem => item.Name)</td>
            @*<td> <input type="checkbox" value="@Html.DisplayFor(modelItem => item.Id)" /></td>*@
            <td>
                @*@Html.EditorFor(model => model.Reparatieopdracht.Startdate, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.CheckBoxFor(m => item.IsChecked, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => item.IsChecked, "", new { @class = "text-danger" })
            </td>

            

        </tr>

        }

       
    </table>
         
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />

            </div>
        </div>
    </div>
}

