@model Computer_Reparatieshop.ViewModels.CreateRepairViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Maak een nieuw item aan</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Reparatie opdrachten</h4>
    <hr />
    <style>
        textarea {
            resize: none;
        }
    </style>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Reparatieopdracht.Name, "Naam reparatie", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Reparatieopdracht.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Reparatieopdracht.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Reparatieopdracht.Startdate, "Begindatum reparatie", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Reparatieopdracht.Startdate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Reparatieopdracht.Startdate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Reparatieopdracht.Enddate, "Einddatum reparatie", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Reparatieopdracht.Enddate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Reparatieopdracht.Enddate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Reparatieopdracht.Details, "Details reparatie", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Reparatieopdracht.Details, new { cols = "50", rows = "15", @draggable = "false", @resize = "none" })
            @Html.ValidationMessageFor(model => model.Reparatieopdracht.Details, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Reparatieopdracht.Klant, "Klant", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
       
            @Html.DropDownListFor(model => model.KlantId, new SelectList(Model.Klanten,"Id", "Fullname"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KlantId, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Maak item aan" class="btn btn-default" />
        </div>
    </div>
</div>
}

@*<div>
    @Html.Title = "Create"
</div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
