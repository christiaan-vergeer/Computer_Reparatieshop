@model Computer_Reparatieshop.ViewModels.CreateRepairViewModel

@{
    ViewBag.Title = "Verwijderen";
}

<h2>Verwijderen</h2>

<h3>Weet je zeker dat je @Html.DisplayFor(model => model.Reparatieopdracht.Name) wilt verwijderen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reparatieopdracht.Name)
        </dd>

        <dt>
            Startdatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reparatieopdracht.Startdate)
        </dd>

        <dt>
            Einddatum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reparatieopdracht.Enddate)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reparatieopdracht.Status)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijder" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar reparatielijst", "Index")
        </div>
    }
</div>
