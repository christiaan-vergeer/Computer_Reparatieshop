@model Computer_Reparatieshop.Models.Klant

@{
    ViewBag.Title = "Delete";
}

<h2>Verwijder</h2>

<h3>Weet je zeker dat je @Html.DisplayFor(model => model.Fullname) wilt verwijderen?</h3>
<div>
    <h4>Klanten</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fullname)
        </dd>

        <dt>
            Telefoonnummer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phonenumber)
        </dd>

        <dt>
            Adres
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adress)
        </dd>

        <dt>
            Stad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            Opdrachten
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.Reparatieopdrachtens.Count)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            verwijderd ook de bijbehorende opdrachten <br />
            <input type="submit" value="Verwijder" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar lijst", "Index")
        </div>
    }
</div>
